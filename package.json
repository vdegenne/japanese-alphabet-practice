{
	"name": "japanese-alphabet-practice",
	"version": "1.0.0",
	"description": "asdf",
	"type": "module",
	"author": "Valentin Degenne <vdegenne@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	},
	"wireit": {
		"dev": {
			"dependencies": [
				"dev:vite",
				"copy:japanese-audios"
			]
		},
		"build": {
			"dependencies": [
				"build:vite",
				"copy:japanese-audios"
			]
		},
		"build:server": {
			"command": "tsc --pretty -p ./tsconfig.server.json",
			"clean": "if-file-deleted",
			"files": [
				"./tsconfig.server.json",
				"./src/server/**/*.ts"
			],
			"output": [
				"./lib/"
			]
		},
		"serve:server": {
			"service": true,
			"command": "node ./lib/server.js",
			"dependencies": [
				"build:server"
			],
			"files": []
		},
		"vuc": {
			"service": true,
			"command": "vuc",
			"files": [
				"./.vuc.json"
			]
		},
		"dev:vite": {
			"service": true,
			"command": "vite --host",
			"dependencies": [
				"vuc",
				"copy:japanese-audios"
			]
		},
		"build:vite": {
			"command": "vite build",
			"files": [
				"./vite.config.js",
				"./src/",
				"./index.html",
				"./public"
			],
			"dependencies": [
				"copy:japanese-audios"
			],
			"output": [
				"./dist/"
			]
		},
		"copy:japanese-audios": {
			"command": "cp -r ./node_modules/@vdegenne/japanese/audio ./public/audio/japanese",
			"files": [],
			"output": [
				"./public/audio/japanese/"
			]
		}
	},
	"devDependencies": {
		"@material/mwc-top-app-bar": "^0.27.0",
		"@material/web": "^2.4.1",
		"@snar/lit": "^1.8.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@vdegenne/about-dialog": "^0.4.2",
		"@vdegenne/debouncer": "^1.0.9",
		"@vdegenne/forms": "^0.1.61",
		"@vdegenne/japanese": "^0.1.4",
		"@vdegenne/lit-debug": "^0.1.2",
		"@vdegenne/material-color-helpers": "^1.11.7",
		"@vdegenne/mini-rest": "^0.3.2",
		"@vdegenne/rollup-plugin-minify-html": "^1.0.6",
		"@vdegenne/router": "^0.1.8",
		"@vdegenne/speech": "^0.5.1",
		"custom-element-decorator": "^0.6.0",
		"html-vision": "^0.3.9",
		"lit": "^3.3.1",
		"lit-with-styles": "^2.1.3",
		"material-3-dialog": "^0.1.11",
		"material-shell": "^1.3.7",
		"rollup-plugin-material-all": "^1.2.2",
		"rollup-plugin-minify-template-literals": "^1.1.7",
		"snar": "^2.3.7",
		"snar-save-to-local-storage": "^1.0.1",
		"tailwindcss": "^4.1.17",
		"toastit": "^2.2.2",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vite-plugin-mdicon2svg": "^0.2.3",
		"vscode-ui-connector": "^0.2.4",
		"wireit": "^0.14.12"
	},
	"scripts": {
		"dev": "wireit",
		"build": "wireit"
	}
}
